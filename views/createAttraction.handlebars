<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>JavaScript File Upload</title>
</head>
<body>
    <!-- used cloudinary as a resource: https://cloudinary.com/blog/javascript_file_upload_to_cloudinary#setup_process -->
      <button id="upload">Upload files</button>

     <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
     <script type="text/javascript">  
        const image = cloudinary.createUploadWidget({cloudName: 'djllvfvts', uploadPreset: 'ptwngqbr',},(error, result) => {
                if (!error && result && result.event === "success") {
                    console.log("Done! Here is the image info: ", result.info);
                    document.getElementById("uploadedimage").setAttribute("src", result.info.secure_url);
                }
        });

        document.getElementById("upload").addEventListener("click", function () {
            image.open();
        },false);
     </script>
</body>
</html>

