<main>
  <form action="login" method="POST" id="login-form" class="column">
    <h1>Login</h1>

    <label for="emailAddressInput">
      Email
      <input
        type="email"
        name="emailAddressInput"
        id="emailAddressInput"
        placeholder="Enter email address"
      >
    </label>

    <label for="passwordInput">
      Password
      <input
        type="password"
        name="passwordInput"
        id="passwordInput"
        placeholder="Enter password"
      >
    </label>

    {{#if error}}
      <p class="error">{{message}}</p>
    {{/if}}

    <br>     

    <button type="submit" class="btn">Log In</button>
    <p>Don't have an account? Sign up as a <a href="/user/signup" class="signup">user</a> or <a href="/business/signup" class="signup">business</a></p>
  </form>
</main>