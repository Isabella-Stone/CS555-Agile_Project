<main>
    <form method="post" id="signUpBusiness-form" class="column">
        <h2>Business Sign Up</h2>

        <label for="name">Business Name:</label>
        <input type="text" id="name" name="name">

        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName">

        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName">

        <label for="emailAddress">User Email:</label>
        <input type="email" id="emailAddress" name="emailAddress">

        <label for="password">Password (must have at least 8 characters, 1 special character, 1 number, and 1 capital letter):</label>
        <input type="password" id="password" name="password">

        <label for="confirmPassword">Confirm Password:</label>
        <input type="password" id="confirmPassword" name="confirmPassword">

        <label for="username">Business Username:</label>
        <input type="text" id="username" name="username">

        <label for="ageInput">Age:</label>
        <input type="number" id="ageInput" name="ageInput">

        {{#if error}}
            <p>{{message}}</p>
        {{/if}}

        <br/>
        <button type="submit">Submit</button>
    </form>
</main>